<div class="col s12 m8 offset-m2 l6 offset-l3">
  <div class="profile-card card-panel grey lighten-5 z-depth-1">
    <div class="row valign-wrapper">
      <div class="col s2">
        <i class="large material-icons">account_circle</i>
      </div>
      <div class="col s10">
        <h3><%= @student.name %>'s profile</h3>
        <span class="black-text">
          <strong><%= @student.email %></strong>
          <p>Course enrollments: <%= @student.courses.count %></p> 
        </span>
        <% if current_user == @student %>
          <%= link_to '<i class="material-icons right">create</i> Edit'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn grey darken-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<h4>Active Courses</h4>
<% if @student.courses.empty? %>
  No current courses
<% else %>
  <ul class="collection">
    <% @student.courses.each do |course| %>
    <li class="collection-item"><%= course.name %></li>
    <% end %>
  </ul>
<% end %>
<p>
</p>