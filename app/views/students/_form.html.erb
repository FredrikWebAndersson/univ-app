<%= render "shared/errors", obj: @student %>

<!-- Student Signup form -->
<div class="container">
  <div class="row center signup-form">
    <div class="col s12 m8 offset-m2">
      <div class="card-panel">
        <h3 class="header"><%= @student.new_record? ? "Sign up!" : "Edit Profile" %></h3>
        <div class="row">
          <%= form_for(@student, html: {class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col s10 m8 offset-s1 offset-m2">
                <i class="material-icons prefix">account_circle</i>
                <%= f.text_field :name, placeholder: "Full Name", autofocus: true %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s10 m8 offset-s1 offset-m2">
                <i class="material-icons prefix">email</i>
                <%= f.text_field :email, placeholder: "Email" %>
              </div>
            </div>
            <div class="row">
              <div class="col s10 m8 offset-s1 offset-m2">
                <button class="btn waves-effect waves-light">
                <%= f.submit(@student.new_record? ? "Sign up" : "Save changes", class: "white-text") %>
                <i class="material-icons right">send</i>
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

